<% provide(:title, "Aquarium List") %>
<h1>Aquarium List</h1>
<div class="table-responsive">
<table class="table table-striped table-condensed">
	<thead>
		<tr>
			<th class="hidden-xs">ID</th>
			<th>
				<a href="" title="Name!">
					Name
				</a>
			</th>
			<th>
				<a href="#" title="Location!">
					Location
				</a>
			</th>
			<th>Size (gals)</th>
			<th>Water Type</th>
			<th>Status</th>
			<th class="hidden-print">Actions</th>
		</tr>
	</thead>
	<tbody class="table-body">
		<% @aquarium.each do |a| %>
			<tr>
				<td class="hidden-xs"><%= a.id %></td>
				<td><%= a.name %></td>
				<td><%= a.location %></td>
				<td><%= a.gallons %></td>
				<td><%= a.water_type %></td>
				<td><%= a.status %></td>
				<td class="hidden-print">
					<%= link_to "", aquarium_path(a.id), :class=>"glyphicon glyphicon-info-sign", :title=> "Info" %>
					<%= link_to "", edit_aquarium_path(a.id), 
	  								:title=>"Edit",
	  								:class=>"glyphicon glyphicon-pencil" %>
	  				<%= link_to "", aquarium_path(a),
	  								method: :delete,
	  								data: { confirm: 'This action will delete the aquarium and all water 
	  								history and inhabitant data. Are you sure you want to continue?'},
	  								:class=> "glyphicon glyphicon-trash",
	  								:title=> "Delete" %>
	  			</td>
	  		</tr>
	  	  <% end %>
	</tbody>
</table>
</div>
<%= link_to "New Aquarium", new_aquarium_path, :class=>"btn btn-primary btn-sm" %>
