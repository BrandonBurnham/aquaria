<div class="table-responsive">
<table class="table table-striped table-condensed">
	<thead>
		<tr>
			<th class="hidden-xs">ID</th>
			<th>Name</th>
			<th>Email</th>
			<th>Created</th>
			<th>Modified</th>
			<th>Admin</th>
			<th class="hidden-print">Actions</th>
		</tr>
	</thead>
	<tbody class="table-body">
		<% @users.each do |u| %>
			<tr>
				<td class="hidden-xs"><%= u.id %></td>
				<td><%= u.name %></td>
				<td><%= u.email %></td>
				<td><%= u.created_at %></td>
				<td><%= u.updated_at %></td>
				<td><%= u.admin %></td>
				<td class="hidden-print">
					<%= link_to "", user_path(u.id), :class=>"glyphicon glyphicon-info-sign", :title=> "Info" %>
					<%= link_to "", edit_user_path(u.id), 
	  								:title=>"Edit",
	  								:class=>"glyphicon glyphicon-pencil" %>
	  				<% if current_user.admin? && !current_user?(user) %>
	  				<%= link_to "", user_path(u),
	  								method: :delete,
	  								data: { confirm: 'This action will delete the selected user. Are you sure you want to continue?'},
	  								:class=> "glyphicon glyphicon-trash",
	  								:title=> "Delete" %>
	  				<% end %>
	  			</td>
	  		</tr>
	  	  <% end %>
	</tbody>
</table>
</div>