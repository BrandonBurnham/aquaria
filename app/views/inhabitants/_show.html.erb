<div id="inhabitants" class="panel panel-default">
<div class="panel-heading"><h3 class="panel-title">Inhabitants</h3></div>
<div class="panel-body">
<div class="table-responsive">
<table class="table table-striped table-condensed">
	<thead>
		<tr>
			<th class="hidden-xs">ID</th>
			<th>Type</th>
			<th>Name</th>
			<th>Quantity</th>
			<th class="hidden-print">Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @aquarium.inhabitants.each do |a| %>
			<tr>
				<td class="hidden-xs"><%= a.id %></td>
				<td><%= a.inhabitant_type %></td>
				<td><%= a.name %></td>
				<td><%= a.quantity %></td>
				<td class="hidden-print">
					<%= link_to "", edit_aquarium_inhabitant_path(:id=> a.id, :aquarium_id=>a.aquarium_id),
	  																:id=>a.id,
	  																:aquarium_id=>a.aquarium_id,
	  																:class=>"glyphicon glyphicon-pencil",
	  																:title=>"Edit" %>
	  				<%= link_to "", aquarium_inhabitant_path(:id=> a.id, :aquarium_id=>a.aquarium_id),
	  														method: :delete,
	  														data: { confirm: 'Are you sure?'},
	  														:class=> "glyphicon glyphicon-trash",
	  														:title=> "Delete" %>
	  			</td>
	  		</tr>
	  	<% end %>
	</tbody>
</table>
</div>
<%= link_to "Add Inhabitant", new_aquarium_inhabitant_path(:aquarium_id=>@aquarium), :class=>"btn btn-primary btn-sm hidden-print" %>
</div>
</div>